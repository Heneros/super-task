{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "noEmit": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "lib/*": [
        "./lib/*"
      ],
      "redux/*": [
        "./redux/"
      ],
      "assets/*": [
        "./assets/"
      ],
      "app/*": [
        "./app/"
      ],
      "interfaces/*": [
        "./interfaces/"
      ],
      "data/*": [
        "./data/"
      ],
      "components/*": [
        "./components/"
      ],
      "features/*": [
        "./features/"
      ]
    },
    "module": "esnext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "out",
    ".git",
    "tmp",
    "public",
    "coverage",
    "ignore"
  ]
}