generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SuperHero{
  id Int @id @default(autoincrement())
  nickname String  @unique
  origin_description String 
  superpowers  String[]
  catch_phrase String

  images Images[]
  createdAt DateTime @default(now())
      updatedAt DateTime @updatedAt
}

model Images{
    id Int @id @default(autoincrement())


    posterUrl String
    imageId Int 


    superHero SuperHero @relation(fields: [imageId],references: [id], onUpdate: Cascade)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}