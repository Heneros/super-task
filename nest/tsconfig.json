{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@/data/*": [
        "./src/data/*"
      ],
      "@/data": [
        "./src/data"
      ],
      "@/cloudinary/*": [
        "./src/cloudinary/*"
      ],
      "@/superheroes/*": [
        "./src/superheroes/*"
      ],
      "@/prisma/*": [
        "./src/prisma/*"
      ],
      "@/interfaces/*": [
        "./src/interfaces/*"
      ],
      "@/decorators/*": [
        "./src/decorators/*"
      ],
      "@/redis/*": [
        "./src/redis/*"
      ],
      "@/pipe/*": [
        "./src/pipe/*"
      ],
      "@/*": [
        "./src"
      ]
    },
  },
  "include": [
    "src/**/*",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "libs",
    "dist"
  ]
}